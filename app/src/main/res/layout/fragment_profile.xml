<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- Top Up -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragmentProfile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="serif"
                android:text="Profile"
                android:textColor="#333333"
                android:textSize="48dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fragmentProfile_accountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:visibility="visible"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/fragmentProfile_accountInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Account Info"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragmentProfile_accountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="20dp"
                    android:paddingTop="55dp"
                    android:text="Name"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_accountEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="20dp"
                    android:paddingTop="85dp"
                    android:text="Email"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_accountBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="20dp"
                    android:paddingTop="115dp"
                    android:paddingBottom="15dp"
                    android:text="Balance"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_accountNameOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="140dp"
                    android:paddingTop="55dp"
                    android:text="Name"
                    android:textAlignment="textStart"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_accountEmailOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="140dp"
                    android:paddingTop="85dp"
                    android:text="Email"
                    android:textAlignment="textStart"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_accountBalanceOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="140dp"
                    android:paddingTop="115dp"
                    android:paddingBottom="15dp"
                    android:text="Balance"
                    android:textAlignment="textStart"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragmentProfile_topUpSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:visibility="visible"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/fragmentProfile_topUpSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Top Up"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragmentProfile_withDrawSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Withdraw"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/fragmentProfile_balanceInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="Balance"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingTop="60dp"
                    android:paddingBottom="12dp"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/fragmentProfile_buttonTopUp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="45dp"
                    android:backgroundTint="#2e8dff"
                    android:fontFamily="sans-serif-light"
                    android:text="Top Up"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/fragmentProfile_buttonWithdraw"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="45dp"
                    android:backgroundTint="#2e8dff"
                    android:fontFamily="sans-serif-light"
                    android:text="Withdraw"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragmentProfile_renter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/fragmentProfile_cancelRegister"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="200dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Cancel"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/fragmentProfile_registerRenter"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="200dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Register"
                    app:cornerRadius="10dp" />

                <TextView
                    android:id="@+id/fragmentProfile_renterAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="20dp"
                    android:paddingTop="85dp"
                    android:text="Address"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_renterPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="20dp"
                    android:paddingTop="115dp"
                    android:paddingBottom="15dp"
                    android:text="Phone Number"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_renterNameOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="140dp"
                    android:paddingTop="55dp"
                    android:text="Name"
                    android:textAlignment="textStart"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_renterAddressOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="140dp"
                    android:paddingTop="85dp"
                    android:text="Address"
                    android:textAlignment="textStart"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_renterPhoneNumberOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="140dp"
                    android:paddingTop="115dp"
                    android:paddingBottom="15dp"
                    android:text="Phone Number"
                    android:textAlignment="textStart"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_renterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="20dp"
                    android:paddingTop="55dp"
                    android:text="Name"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmentProfile_renterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Renter"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragmentProfile_renterNullWelcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="100dp"
                    android:text="Ready to Become A Millionaire?"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/fragmentProfile_becomeRenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Become Renter Now!"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/fragmentProfile_manageRoom"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="150dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Manage Room"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/fragmentProfile_createRoom"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="150dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Create Room"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/fragmentProfile_createVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="create voucher"
                    app:cornerRadius="10dp" />

                <EditText
                    android:id="@+id/fragmentProfile_renterNameInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="Renter Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp" />

                <EditText
                    android:id="@+id/fragmentProfile_renterAddressInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="90dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="Renter Address"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp" />

                <EditText
                    android:id="@+id/fragmentProfile_renterPhoneNumberInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="140dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:hint="Renter Phone Number"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/fragmentProfile_logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:text="Logout"
                android:textColor="#2e8dff"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Renter -->

    <!-- Account -->

</androidx.constraintlayout.widget.ConstraintLayout>